{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["esnext", "dom"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true
    },
    "include": [
      "src"
    ]
  }